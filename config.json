{
  "model": {
    "name": "Svarog",
    "architecture": "llama",
    "vocab_size": 50000,
    "max_position_embeddings": 2048,
    "hidden_size": 2048,
    "num_hidden_layers": 24,
    "num_attention_heads": 16,
    "intermediate_size": 8192,
    "hidden_act": "silu",
    "initializer_range": 0.02,
    "rms_norm_eps": 1e-6,
    "tie_word_embeddings": false,
    "pad_token_id": 0,
    "bos_token_id": 1,
    "eos_token_id": 2
  },
  "training": {
    "batch_size": 4,
    "gradient_accumulation_steps": 8,
    "learning_rate": 2e-4,
    "weight_decay": 0.1,
    "max_grad_norm": 1.0,
    "num_epochs": 3,
    "warmup_steps": 2000,
    "save_steps": 5000,
    "eval_steps": 1000,
    "logging_steps": 100,
    "gradient_checkpointing": true,
    "fp16": true,
    "deepspeed_config": "ds_config.json"
  },
  "data": {
    "train_split": 0.9,
    "val_split": 0.1,
    "max_length": 2048,
    "datasets": [
      "oscar",
      "the_pile",
      "cc_news"
    ],
    "languages": ["ru", "en"]
  },
  "tokenizer": {
    "type": "sentencepiece",
    "vocab_size": 50000,
    "model_type": "bpe",
    "character_coverage": 0.9995,
    "input_sentence_size": 1000000,
    "shuffle_input_sentence": true
  },
  "paths": {
    "data_dir": "./data",
    "processed_dir": "./processed",
    "tokenizer_dir": "./tokenizer",
    "model_dir": "./models",
    "checkpoint_dir": "./checkpoints",
    "log_dir": "./logs"
  }
}
